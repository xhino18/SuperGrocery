<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/cardview_more_products_width"
        android:layout_height="@dimen/cardview_more_products_height"
        android:id="@+id/cardview_more_products"
        app:cardCornerRadius="@dimen/standart_image_cardview_radius"
        android:layout_margin="@dimen/cardview_more_products_margin">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/tv_freeDelivery_leftRight_margin"
            android:layout_marginEnd="@dimen/tv_freeDelivery_leftRight_margin"
            android:layout_marginStart="@dimen/tv_freeDelivery_leftRight_margin"
            android:layout_marginLeft="@dimen/tv_freeDelivery_leftRight_margin"
            android:id="@+id/imageview_more_products"
            android:scaleType="fitXY">

        </ImageView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>