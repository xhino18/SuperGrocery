<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="170dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="@dimen/standart_topBottom_margin"
        android:layout_marginEnd="@dimen/standart_topBottom_margin"
        android:id="@+id/cardview_discount_products"
        app:cardCornerRadius="@dimen/standart_image_cardview_radius">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageview_discount_product"
            android:scaleType="fitXY">

        </ImageView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>